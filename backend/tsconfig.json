{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
//    "allowImportingTsExtensions": true,
    "outDir": "./dist",
//    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"]  // Добавлено для работы с Node.js
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}